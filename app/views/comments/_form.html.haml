= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :likes_count
    = f.number_field :likes_count
  .actions
    = f.submit 'Save'
