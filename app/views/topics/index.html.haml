%h1 Listing topics

%table
  %thead
    %tr
      %th User
      %th Title
      %th Description
      %th Comments count
      %th
      %th
      %th

  %tbody
    - @topics.each do |topic|
      %tr
        %td= topic.user
        %td= topic.title
        %td= topic.description
        %td= topic.comments_count
        %td= link_to 'Show', topic
        %td= link_to 'Edit', edit_topic_path(topic)
        %td= link_to 'Destroy', topic, :method => :delete, :data => { :confirm => 'Are you sure?' }

